!IFDEF MSSDK_BUILD

!include <win32.mak>

cflags=$(cflags) -DDBG

all: hidserv.exe

.c.obj:
    $(cc) $(cdebug) $(cflags) $(cvars) $*.c

hidserv.res: hidserv.rc hidaudio.h
    $(rc) -r hidserv.rc

hidserv.exe: hidserv.res \
   hidserv.obj hidaudio.obj mixer.obj report.obj pnp.obj list.obj
  $(link) $(linkdebug) $(guiflags) -machine:$(CPU) -out:$*.exe $** $(guilibs) hid.lib setupapi.lib shell32.lib


!ELSE

